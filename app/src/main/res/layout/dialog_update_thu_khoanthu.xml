<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/background_dialog_chi_loaichi"
    android:orientation="vertical">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/textUpdate"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/background_textview_dialog_loaichi"
             android:padding="12dp"
             android:text="Details of different types of money"
             android:textAlignment="center"
             android:textColor="@color/white"
             android:textSize="16sp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"/>
         <ImageView
             android:id="@+id/image_close_Khoanthu"
             android:layout_width="30dp"
             android:layout_height="30dp"
             app:tint="@color/white"
             android:src="@drawable/ic_close"
             android:layout_marginRight="10dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="@id/textUpdate"
             app:layout_constraintBottom_toBottomOf="@id/textUpdate"/>
     </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="12dp"
            android:text="Please enter your expenses!"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_Update_SpnKhoanThu_DiaLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_edittext_dialog_chi_loaichi"
            android:hint="Choose a date!"
            android:padding="12dp"
            android:textColor="@color/dark" />

        <EditText
            android:id="@+id/input_Update_TypysKhoanThu_DiaLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_edittext_dialog_chi_loaichi"
            android:hint="Enter expenses!"
            android:padding="12dp"
            android:textColor="@color/dark" />

        <EditText
            android:id="@+id/input_Update_MoneyKhoanThu_DiaLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_edittext_dialog_chi_loaichi"
            android:hint="Enter expenses!"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/dark" />

        <TextView
            android:id="@+id/text_Update_DateKhoanThu_DiaLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_edittext_dialog_chi_loaichi"
            android:drawableEnd="@drawable/ic_time"
            android:hint="Choose a date!"
            android:padding="12dp"
            android:textColor="@color/dark" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Update_Dialog_KhoanThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:fontFamily="@font/cambriai"
                android:alpha="0.8"
                android:textColor="@color/white"
                android:background="@drawable/background_save_dialog_loaichi"
                android:text="Update"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Delete_Dialog_KhoanThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_dialog_failed"
                android:backgroundTint="@null"
                android:textStyle="bold"
                android:fontFamily="@font/cambriai"
                android:text="Delete"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>