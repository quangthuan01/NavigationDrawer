<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUpFragment">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutName_sinup"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:endIconMode="clear_text"
            app:errorIconDrawable="@drawable/ic_warning"
            app:helperText="Mandatory*"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:startIconDrawable="@drawable/custom_focus_person">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextInputName_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@color/dark"
                android:textSize="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutEmail_sinup"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:endIconMode="custom"
            app:errorIconDrawable="@drawable/ic_warning"
            app:helperText="Opsional*"
            app:helperTextTextColor="@color/dark"
            app:startIconDrawable="@drawable/custom_focus_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextInputEmail_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark"
                android:textSize="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutPass_sinup"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="password_toggle"
            app:helperText="Required*"
            app:errorIconDrawable="@drawable/ic_warning"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:startIconDrawable="@drawable/custom_focus_lock">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextInputPass_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PassWord"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="21"
                android:textColor="@color/dark"
                android:textSize="15dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutPhoneNumber_sinup"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:endIconMode="clear_text"
            app:helperText="Required*"
            app:prefixText="+84"
            app:errorIconDrawable="@drawable/ic_warning"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:startIconDrawable="@drawable/custom_focus_call">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextInputPhone_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/dark"
                android:textSize="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_save_dialog_loaichi"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:text="Sign Up"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>